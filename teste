    pattern = rf'{occurrence}((?:\S+|\s+){occurrence}(?:\S+|\s+)(?:(?=\s+)|$))'
    
    # Find all matches in the text
    matches = re.findall(pattern, text, re.DOTALL)
    
    # Extract and format the captured 10 words from each match
    results = []
    for match in matches:
        match_text = match[0].strip()  # Remove leading/trailing spaces
        results.append(match_text)
    
    return results
