import spacy

# Load spaCy's English model with NER
nlp = spacy.load("en_core_web_sm")

# Example input text
text = "The customer was called three times yesterday."

# Process the text with spaCy
doc = nlp(text)

# Extract entities (e.g., numbers) and their labels
entities = [(ent.text, ent.label_) for ent in doc.ents]

# Filter for entities labeled as CARDINAL (numbers)
customer_calls = [int(text) for text, label in entities if label == "CARDINAL"]

# Print the extracted information
print("Number of customer calls:", customer_calls)

