import spacy

# Example dataset
example_dataset = [
    "Yesterday, the customer was called three times.",
    "Last week, there were five customer calls.",
    "The phone rang twice during the customer call.",
]

# Load spaCy's English model with NER
nlp = spacy.load("en_core_web_sm")

# Process each example in the dataset
for example_text in example_dataset:
    # Process the text with spaCy
    doc = nlp(example_text)

    # Extract entities (e.g., numbers) and their labels
    entities = [(ent.text, ent.label_) for ent in doc.ents]

    # Filter for entities labeled as CARDINAL (numbers)
    customer_calls = [int(text) for text, label in entities if label == "CARDINAL"]

    # Print the original text and extracted information
    print("Original Text:", example_text)
    print("Number of Customer Calls:", customer_calls)
    print("---")
